    "bin": [
        [
            "stdiscosrv.exe",
            "stdiscosrv",
            "-cert \"$dir\\cert.pem\"",
            "-db-dir \"$dir\\discovery.db\"",
            "-key \"$dir\\key.pem\""
        ]
    ],
    "persist": [
        "discovery.db",
        "cert.pem",
        "key.pem"
